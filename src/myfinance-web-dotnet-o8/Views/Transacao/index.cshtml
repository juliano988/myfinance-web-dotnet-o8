@using myfinance_web_dotnet_o8.Domain
<h1>Listagem de Transações Financeiras</h1>

<br />

<a type="button" class="btn btn-primary" asp-area="" asp-controller="Transacao" asp-action="Cadastro">
  Registrar uma Transação
</a>

<br />

<table class="table table-bordered">
  <tr>
    <th>Id</th>
    <th>Histórico</th>
    <th>Tipo</th>
    <th>Valor</th>
    <th>Data</th>
    <th>#</th>
    <th>#</th>
  </tr>
  @foreach (var item in (List<Transacao>)ViewBag.Lista)
  {
    <tr>
      <td>@item.Id</td>
      <td>@item.Historico</td>
      <td>@item.PlanoConta.Tipo</td>
      <td>@item.Valor</td>
      <td>@item.Data</td>
      <td>
        <a type="button" class="btn btn-primary" onclick="Editar(@item.Id)">
          Editar
        </a>
      </td>
      <td>
        <a type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">
          Excluir
        </a>
      </td>
    </tr>
  }
</table>

<script>
  function Editar(id) {
    window.location.href = '../Transacao/Cadastro/' + id;
  }

  function Excluir(id) {
    if (confirm('Deseja realmente excluir este item?')) {
      window.location.href = '../Transacao/Excluir/' + id;
    }
  }
</script>