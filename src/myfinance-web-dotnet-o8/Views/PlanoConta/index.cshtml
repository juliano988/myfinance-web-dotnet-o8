@using myfinance_web_dotnet_o8.Domain
<h1>Plano de Contas</h1>

<br />

<a type="button" class="btn btn-primary" asp-area="" asp-controller="PlanoConta" asp-action="Cadastro">
  Criar item de Plano de Contas
</a>

<br />

<table class="table table-bordered">
  <tr>
    <th>Id</th>
    <th>Descrição</th>
    <th>Tipo</th>
    <th>#</th>
    <th>#</th>
  </tr>
  @foreach (var item in (List<PlanoConta>)ViewBag.Lista)
  {
    <tr>
      <td>@item.Id</td>
      <td>@item.Nome</td>
      <td>@item.Tipo</td>
      <td>
        <a type="button" class="btn btn-primary" onclick="Editar(@item.Id)">
          Editar
        </a>
      </td>
      <td>
        <a type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">
          Excluir
        </a>
      </td>
    </tr>
  }
</table>

<script>
  function Editar(id) {
    window.location.href = '/PlanoConta/Cadastro/' + id;
  }

  function Excluir(id) {
    if (confirm('Deseja realmente excluir este item?')) {
      window.location.href = '/PlanoConta/Excluir/' + id;
    }
  }